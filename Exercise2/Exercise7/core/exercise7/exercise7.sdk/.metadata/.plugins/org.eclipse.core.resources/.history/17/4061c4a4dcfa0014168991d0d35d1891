 *      Author: Kasper
 */

void main(void) {
	char ctrlVal, value, skip;

	while (1) {
		xil_printf("CMD:> ");
		value = inbyte(); // Read char from console
		skip = inbyte(); // skip CR
		skip = inbyte(); //skip LF

		if (value >= 'A' && value <= 'F') {

			ctrlVal = value - 'A';

		}

		else if (value >= 'a' && value <= 'f') {
			ctrlVal = value - 'a';

		}

		else if (value >= '0' && value <= '9'){
			ctrlVal = value - '0';
		}

		else {
			xil_printf("Invalid character \n\r");

		}

	}
}

