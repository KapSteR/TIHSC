#ifndef PARTICLE_H_
#define PARTICLE_H_

#include "Position.h"
#include "MoveBlock.h"

#define _USE_MATH_DEFINES
#include "math.h"
#include "RangeArray.h"

class Particle{
public:
	Particle();
	Position pos;
	float w;

	void move(MoveBlock& MB);
	float weightCalculation(int* dataArray);
    
private:
	static const int noise = 1000;
    static const int noiseSqr = noise*noise;
    static const float normalizer = -0.5*log(2*M_PI) - 0.5*log(noiseSqr);
};

#endif /* PARTICLE_H_ */
