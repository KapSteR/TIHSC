//	MC->move(0,500,M_PI_2);
//	xil_printf("Wait one second\r\n");
//	MC->ScuTimerWait(TIMER_DEVICE_ID,ONE_SECOND);
//	xil_printf("Move 0.5 meters south\r\n");
//	MC->move(90,500,(3*M_PI_2));
//
//	xil_printf("End of program\r\n");

	delete MC;

	return 0;
}




