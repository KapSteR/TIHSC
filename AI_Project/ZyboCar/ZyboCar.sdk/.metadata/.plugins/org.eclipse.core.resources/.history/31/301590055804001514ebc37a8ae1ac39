/*
 * Empty C++ Application
 */

#include "xparameters.h"
#include "move.h"

int main() {

	MoveController* MC = new MoveController();
	int count = 0;

	xil_printf("Start of program.");

	MC->ScuTimerWait(TIMER_DEVICE_ID,ONE_SECOND);
	xil_printf("Robot assumed to be heading east\r\n");

	MC->initMotor();

	xil_printf("Move 0.5 meter north\r\n");
	MC->move(0,500,M_PI_2);
	xil_printf("Wait one second\r\n");
	MC->ScuTimerWait(TIMER_DEVICE_ID,ONE_SECOND);
	xil_printf("Move 0.5 meters south\r\n");
	MC->move(90,500,(3*M_PI_2));

	xil_printf("End of program\r\n");

	delete MC;

	return 0;
}




